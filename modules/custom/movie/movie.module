function movie_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  // Check if it's the form for a specific custom block type, e.g., 'basic'.
  if ($form_id === 'block_content_trending_edit_form') {
    $block = $form_state->getFormObject()->getEntity();

  if ($block instanceof BlockContent) {
    $block_id = $block->id();
    $field_tanking_list_id = $block->get('field_tanking_list_id')->value;
   
  }
 $form['#prefix'] = '<div class="article-title-wrapper"><a href="/admin/batch-movie?blockid='.$block_id.'&rankingid='.$field_tanking_list_id.'">Update</a>';
 $form['#suffix'] = '</div>';
  }
}
/**
 * Implements hook_node_presave().
 */
function movie_node_presave(NodeInterface $node) {
  // Example: Set a default value for a custom field if it's empty.
  if ($node->get('field_embed')->value) {
// print $node->field_embed->value;
 $queryString = parse_url($node->field_embed->value, PHP_URL_QUERY);
    
    $params = [];
    parse_str($queryString, $params);
$enco_str = base64_encode($params['url']);
//  print "<br>".$params['url'];
//exit;
if(@$params['enco']){
   
$string = $node->field_embed->value;
$newString = str_replace($params['url'],$enco_str, $string);
$newString = (@$params['s'])?str_replace($params['s'],base64_encode($params['s']), $newString):$newString;
$newString = (@$params['enco'])?str_replace('enco=1','enco=', $newString):$newString;
//print $newString;
//exit;
    $node->set('field_embed', $newString);
}
  }


}

